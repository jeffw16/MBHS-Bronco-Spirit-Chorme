{
  "manifest_version": 2,

  "name": "MBHS Bronco Spirit",
  "description": "Show your Bronco spirit with everything Boyd. GO BRONCOS!!!",
  "version": "0.1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ]
}
